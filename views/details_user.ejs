                      <!-- /Breadcrumb -->
                
                      <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                          <div class="card"style="margin-bottom: 5%;">
                            <div class="card-body" style="margin-bottom: 3%;">
                              <div class="d-flex flex-column align-items-center text-center">
                                <img name="image" id="image" src="/<%=users.img%>" class="rounded-circle" width="150" alt="">
                
                                <div class="mt-3">
                                  <h4><%= users.sexe === "Homme" ? 'Mr.' : 'M.'%><%= users.username%></h4>
                                  <p class="text-secondary mb-1"><%= moment(users.date_dn).format('L'); %></p>
                                  <p class="text-muted font-size-sm"><%=users.email%></p>
                                  <p style="font-size:200%;">SCORE : <%=users.score%></p>
                                  <a target="_blank" href="/contact_user/<%=users._id%>"><button class="btn btn-primary">Contacter le candidat</button></a>
                                  
                                  <a href="/delete_user/<%=users._id%>"><button class="btn btn-danger">Supprimer</button></a>
                                </div>
                              </div>
                            </div>
                          </div>
                          <form action="/ajout_ent/<%=users._id%>?_csrf=<%= csrfToken %>" method="POST">                           
                          <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="form-group">
                                  <label>Le candidat a-t-il passé Les tests psychotechniques ?</label>
                                  <div class="form-control">
                                    <label class="radio-inline">
                                      <input type="radio" name="psy_ent" value="Oui" [(ngModel)]="psy_ent" <%if(users.psy_ent === "Oui"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Oui
                                    </label>
                                    <label class="radio-inline">
                                      <input type="radio" name="psy_ent" value="Non" [(ngModel)]="psy_ent"<%if(users.psy_ent === "Non"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Non
                                    </label>
                                  </div>
                                </div>
                              </li>
                              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="form-group">
                                  <label>Le candidat s'est présenté à l'heure pour l'entretien ?</label>
                                  <div class="form-control">
                                    <label class="radio-inline">
                                      <input type="radio" name="heure_ent" value="Oui" [(ngModel)]="heure_ent"<%if(users.heure_ent === "Oui"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Oui
                                    </label>
                                    <label class="radio-inline">
                                      <input type="radio" name="heure_ent" value="Non" [(ngModel)]="heure_ent"<%if(users.heure_ent === "Non"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Non
                                    </label>
                                  </div>
                                </div>
                              </li>
                             
                              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="form-group">
                                  <label>État du CV :</label>
                                  <div class="form-control">
                                    <label class="radio-inline">
                                      <input type="radio" name="cv_ent" value="Bon" [(ngModel)]="cv_ent" <%if(users.cv_ent === "Bon"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Bon
                                    </label>
                                    <label class="radio-inline">
                                      <input type="radio" name="cv_ent" value="Passable" [(ngModel)]="cv_ent"<%if(users.cv_ent === "Passable"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Passable
                                    </label>
                                    <label class="radio-inline">
                                      <input type="radio" name="cv_ent" value="Falsifier" [(ngModel)]="cv_ent" <%if(users.cv_ent === "Falsifier"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Falsifier
                                    </label>
                                   
                                    
                                  </div>
                                </div>
                              </li>
                              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="form-group">
                                  <label>Lettre de motivation délivrée ?</label>
                                  <div class="form-control">
                                    <label class="radio-inline">
                                      <input type="radio" name="mot_ent" value="Oui" [(ngModel)]="mot_ent"<%if(users.mot_ent === "Oui"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Oui
                                    </label>
                                    <label class="radio-inline">
                                      <input type="radio" name="mot_ent" value="Non" [(ngModel)]="mot_ent"<%if(users.mot_ent === "Non"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Non
                                    </label>
                                  </div>
                                </div>
                              </li>
                              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="form-group">
                                  <label>Copie de la carte d'identité nationale délivrée ?</label>
                                  <div class="form-control">
                                    <label class="radio-inline">
                                      <input type="radio" name="cin_ent" value="Oui" [(ngModel)]="cin_ent"<%if(users.cin_ent === "Oui"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Oui
                                    </label>
                                    <label class="radio-inline">
                                      <input type="radio" name="cin_ent" value="Non" [(ngModel)]="cin_ent" <%if(users.cin_ent === "Non"){%>
                                        <%="checked"%>
                                    <%}%>>
                                      Non
                                    </label>
                                  </div>
                                </div>
                                <button class="btn btn-info " type="submit">Mettre à jour les informations</button>
                              </li>
                              
                            </ul>
                          </div>
                        </div>
                        
</form>

                        <div class="col-md-8">
                          <div class="card mb-3">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-sm-3 " style="text-align: center;">
                                 <h5 class="mb-0">Nom et Prénom :</h5>
                                </div>
