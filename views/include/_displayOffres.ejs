<% emplois.forEach((row, index)=> { %>

<tr class="align-middle">

        <% if (row.disponibilite === 'disponible') { %>
        <td><img src="img/open_icon.png" alt="Open" ></td>
        <td style="display:none;"><%= row.disponibilite %></td>
        <%} else { %>
        <td><img src="img/closed_icon.png" alt="Closed"></td>
        <td style="display:none;"><%= row.disponibilite %></td>
        <% } %>

    <td><%= row.fonction %></td>
    <td><%= row.recruteur %></td>
    <td><%= row.contrat %></td>
    <td><%= moment(row.date_debut).format('L'); %></td>
    <td><%= row.secteur %></td>
    
    <td><%= row.paiment %></td>
    
    <td>
        
        
           
      
<a  title="Voir les details du poste" href="/details_offre/<%= row._id %>" class="text-success"><i class="fas fa-info-circle" style="font-size: 130%;color: blue;"></i></a>    
<a  title="Voir la liste des postulations" href="/display_postulation/<%= row._id %>" class="text-success bt_emp" data-id="<%= row._id %>"><i class="fas fa-address-card fa-lg mx-1" style="color: darkslateblue;"></i></a>

<a  title="Modifier les details du poste" href="/edit_emploi/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
<a  title="Supprimer l'offre" href="/delete_emploi/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
    </td>
</tr>
<% }) %>
