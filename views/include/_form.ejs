

        <form action="/api/offres" method="POST" id="Ajouter_offre" class="Ajouter_offre">
            
            <div class="new1">
                <div class="form-group">
                    <label for="priorite" class="text-dark">Priorite de l'emploi :</label>
                    <select name="priorite" id="priorite" data-style="btn-primary" class="selectpicker" >
                        
                        <option value="Niveau 1">Niveau 1</option>
                        <option value="Niveau 2">Niveau 2</option>
                        <option value="Niveau 3">Niveau 3</option>
                    </select>
                    
                    
                </div>

                <div class="form-group">
                    <label for="titre" class="text-dark">Titre de l'emploi :</label>
                    <input type="text" name="titre" placeholder="Titre de l'emploi" id="titre" maxlength="50">
                    <i class="fas fa-check-circle"></i>
			        <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>

                <div class="form-group">
                    <label for="date_debut" class="text-dark">Date de lancement :</label>
                    <input type="date" name="date_debut" id="dd">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>   
                <div class="form-group">
                    <label for="date_fin" class="text-dark">Date de Clôture :</label>
                    <input type="date" name="date_fin" id="df">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>

                <div class="form-group">
                    <label for="Recruteur" class="text-dark">Nom du Recruteur :</label>
                    <input type="text" name="recruteur" placeholder="Insérer votre nom et prenom" id="recruteur">  
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>

                <div class="form-group">
                    <label for="district" class="text-dark">Emplacement et Lieu :</label>
                    <input type="text" name="district" placeholder="Insérer l'emplacement visée" id="lieu">  
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>

                
                <div class="form-group">
                    <label for="description" class="text-dark">Description de l'emploi  :</label>
                    <textarea id="description" name="description" rows="4" cols="95%" placeholder="Insérer votre description de l'emploi ici ..."></textarea>
                </div>
                <div class="form-group">
                    <label for="status" class="text-dark">Status :</label>

                    <div class="inline">
                        <input type="radio" name="status" value="Ouvert">
                        <label for="status" class="text-dark">Ouvert</label>
                    </div>
                    <div class="inline">
                        <input type="radio" name="status" value="Fermer">
                        <label for="status" class="text-dark">Fermer</label>
                    </div>
                   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text update"><b>Confirmer votre offre</b></button>
                </div>
            
        </div> 
        </form>
 