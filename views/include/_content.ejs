<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
<% if( message ){ %>
            <div classs="container p-5">
                <div class="row no-gutters fixed-bottom">
                  <div class="col-lg-3 col-md-20">
                    <div class="alert alert-<%= message.type %> alert-dismissible fade show mt-3" role="alert">
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                       <h4 class="alert-heading"><i class="glyphicon glyphicon-info-sign"></i>ATTENTION !</h4>
                        <p>  <%= message.message %>.</p>
                        
                    </div>
                  </div>
                </div>
              </div>
<%}%>
            <div class="table-responsive">
                <% if( emplois !="" ){ %>
                    <table id="table" class="table table-striped text-center my-3">
                        <thead style="font-size:15px;">
                            <tr class="table-dark">
                                <th>Priorité d'embauche</th>
                                <th>Image</th>
                                <th>Fonction</th>
                                <th>Recruteur</th>
                                <th>Contrat</th>
                                <th>Date de lancement</th>
                                <th>Date de clôture</th>
                                <th>District</th>
                                <th>Secteur</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <%-include('include/_displayOffres')%>
                        </tbody>
                    </table>
                    <%}else {%>
                        <h1 class="text-center text-secondary mt-5">No users found in the database !</h1>
                        <%}%>
            </div>
        </div>
    </div>
</div>

