        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">Modifier une offre de stage</h2>
            </div>
            <div class="card-body">
                <form action="/edit_vacant/<%= vacant._id %>?_csrf=<%= csrfToken %>" method="POST" id="edit_vacant" name="edit_vacant">
                    
                
                    <div class="form-row">
                        <label class="col-md-4 control-label" >Intitulé de stage: <b style="color:red">*</b></label> 
                          <div class="col-md-4 inputGroupContainer">
                          <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-info-sign"></i></span>
                        <input  style="width: 210%;" name="sujet"  id="sujet" class="form-control"  type="text" value="<%= vacant.sujet %>">
                          </div>
                        </div>
                      </div>

                    
                    <div class="form-row">
                        <label class="col-md-4 control-label" >Nom de l'encadreur: <b style="color:red">*</b></label> 
                          <div class="col-md-4 inputGroupContainer">
                          <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input  style="width: 210%;" name="encadreur" value="<%= vacant.encadreur %>" id="encadreur" class="form-control"  type="text">
                          </div>
                        </div>
                      </div>

                    
                      <div class="form-row"> 
                        <label class="col-md-4 control-label">Type de stage  : <b style="color:red">*</b></label>
                          <div class="input-group" style="padding-left: 2.5%;">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-euro"></i></span>
                          <select style="width: 242%;" name="type_stage" class="form-control selectpicker" id="type_stage">
                           
                            <option value="payant" <%=vacant.type_stage==='payant' ? 'selected' : '' %>>payant</option>               
                    <option value="non payant" <%=vacant.type_stage==='non payant' ? 'selected' : '' %>>non payant</option>

                          </select>
                          <div class="select-dropdown"></div>
                        </div>
                      </div>

                      <div class="form-row"> 
                        <label class="col-md-4 control-label">Durée de stage : <b style="color:red">*</b></label>
                          <div class="input-group" style="padding-left: 2.5%;">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                          <select style="width: 320%;" name="date_debut" class="form-control selectpicker" id="dd">
                           
                            <option value="1 mois" <%=vacant.date_debut==='1 mois' ? 'selected' : '' %>>1 mois</option>               
                            <option value="3 mois" <%=vacant.date_debut==='3 mois' ? 'selected' : '' %>>3 mois</option>
                            <option value="6 mois" <%=vacant.date_debut==='6 mois' ? 'selected' : '' %>>6 mois</option>
                          </select>
                          <div class="select-dropdown"></div>
                        </div>
                      </div>
                  
                    
                      <div class="form-row"> 
                        <label class="col-md-4 control-label">Secteur : <b style="color:red">*</b></label>
                          <div class="input-group" style="padding-left: 2.5%;">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                          <select style="width:136% ;" name="secteur" class="form-control selectpicker" id="secteur">
                            <option value="Agroalimentaire" <%=vacant.secteur==='Agroalimentaire' ? 'selected' : '' %>>Agroalimentaire</option>
                    <option value="Bâtiment, Travaux Publics" <%=vacant.secteur==='Bâtiment, Travaux Publics' ? 'selected' : '' %>>Bâtiment, Travaux Publics</option>
                    <option value="Commerce, Distribution" <%=vacant.secteur==='Commerce, Distribution' ? 'selected' : '' %>>Commerce, Distribution</option>
                    <option value="Fonction Publique" <%=vacant.secteur==='Fonction Publique' ? 'selected' : '' %>>Fonction Publique</option>
                    <option value="Informatique" <%=vacant.secteur==='Informatique' ? 'selected' : '' %>>Informatique</option>
                    <option value="Metallurgie" <%=vacant.secteur==='Metallurgie' ? 'selected' : '' %>>Metallurgie</option>
                    <option value="Ressources Humaines" <%=vacant.secteur==='Ressources Humaines' ? 'selected' : '' %>>Ressources Humaines</option>
                    <option value="Transport-Logistique" <%=vacant.secteur==='Transport-Logistique' ? 'selected' : '' %>>Transport-Logistique</option>
                    
                          </select>
                          <div class="select-dropdown"></div>
                        </div>
                      </div>
                    

                    <div  class="form-row"> 
                        <label class="col-md-4 control-label">Disponibilité  : <b style="color:red">*</b></label>
                          <div class="input-group"style="padding-left: 2.5%;">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-flag"></i></span>
                          <select style="width: 232%;" name="disponibilite" class="form-control selectpicker" id="disponibilite">
                           
                            <option value="disponible" <%=vacant.disponibilite==='disponible' ? 'selected' : '' %>>disponible</option>
                    <option value="indisponible" <%=vacant.disponibilite==='indisponible' ? 'selected' : '' %>>indisponible</option>
                 
                          </select>
                          <div class="select-dropdown"></div>
                        </div>
                      </div>
                   
                    <div>
                        <button class="btn btn--radius-2 btn--red" type="submit">Modifier <span class="glyphicon glyphicon-send"></span></button>
                    </div>
                </form>
